{% extends 'layout.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <section>
        <div class="content">
            <div class="entry-list">
                {% for post in posts %}
                <article>
                    <h2><a href="/posts/{{ post.id }}/{{ post.title|lower|replace({' ':'-'}) }}">{{ post.title|title }}</a></h2>
                    <time datetime="{{ post.date }}">{{ post.date|date('F d, Y \\a\\t  g:i a') }}</time>
                </article>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}