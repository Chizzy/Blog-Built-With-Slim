{% extends 'base.twig' %}

{% block title %}{{ post.title|title }}{% endblock %}

{% block content %}
    <section>
        <div class="container">
            <div class="entry-list single">
                <article>
                    <h1>{{ post.title|title }}</h1>
                    <time datetime="{{ post.date }}">{{ post.date|date('F d, Y \\a\\t  g:i a') }}</time>
                    <div class="entry">
                        <p>{{ post.body }}</p>
                        <p><a class="link" href="/edit">Edit Entry</a></p>
                    </div>
                </article>
            </div>
        </div>
    </section>
    <section class="entry-comments">
        <div class="container">
            <h2>Comments</h2>
            {% for comment in comments %}
            <div class="comment">
                <strong>{{ comment.name }}</strong>
                <time datetime="{{ comment.date }}">{{ comment.date|date('F d, Y \\a\\t  g:i a') }}</time>
                <p>{{ comment.body }}</p>
            </div>
            {% endfor %}
            <div class="new-comment">
                <form>
                    <label for="name"> Name</label>
                    <input type="text" name="name"><br>
                    <label for="comment">Comment</label>
                    <textarea rows="5" name="comment"></textarea>
                    <input type="submit" value="Post Comment" class="button">
                </form>
            </div>
        </div>
    </section>
{% endblock %}