{% extends 'layout.twig' %}

{% block title %}New{% endblock %}

{% block body %}
    <section>
        <div class="content">
            <div class="new-entry">
                <h2>Publish New Post</h2>
                {% if error is defined %}
                    <div class="alert alert-danger">ERROR!: {{ error }}</div>
                {% endif %}
                <form method="POST" action="/posts/new">
                    {% import 'form.twig' as form %}
                    {{ form.input('title', save.title) }}
                    {{ form.textarea('body', save.body ) }}
                    <label for="tags">Tags</label>
                    <select id="tags" name="tags" class="form-control" multiple>
                        {% for tag in tags %}
                        <option value="{{ tag }}">{{ tag }}</option>
                        {% endfor %}
                    </select>
                    <script>
                        $(document).ready(function() {
                            $('#tags').select2({
                                tags: true,
                                placeholder: 'Type out tags then hit enter after each one OR Select from dropdown'
                            });
                        });
                    </script>
                    <input type="submit" value="Publish Post" class="button">
                    <a href="/" class="button button-secondary">Cancel</a>
                    {% for key, value in csrf %}
                        <input type="hidden" name="{{ key }}" value="{{ value }}">
                    {% endfor %}
                </form>
            </div>
        </div>
    </section>
{% endblock %}